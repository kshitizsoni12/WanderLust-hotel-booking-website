<% layout("/layouts/boilerplate.ejs") %>

    <body>

        <div class="new-route-container">
            <h2>Edit your Listing</h2>
            <form class="new-form needs-validation" novalidate method="post"
                action="/listings/<%=idlisting._id%>?_method=PUT">
                <div class="new-route-form-input">
                    <label for="title">Title:</label>
                    <input type="text" id="title" name="title" value="<%=idlisting.title%>" required
                        class="form-control">
                    <!-- to show text when incorrect data entered -->
                    <div class="invalid-feedback">Please enter a title name</div>
                </div>

                <div class="new-route-form-input">
                    <label for="description">Description:</label>
                    <textarea id="description" name="description" required
                        class="form-control"><%=idlisting.description%></textarea>
                    <!-- to show text when incorrect data entered -->
                    <div class="invalid-feedback">Please enter a short description</div>
                </div>

                <div class="new-route-form-input">
                    <label for="image">Image URL:</label>
                    <input type="text" id="image" name="image" value="<%=idlisting.image%>" required
                        class="form-control">
                </div>

                <div class="price-and-country">
                    <div class="new-route-form-input">
                        <label for="price">Price (â‚¹):</label>
                        <input type="number" id="price" name="price" value="<%=idlisting.price%>" required
                            class="form-control">
                        <!-- to show text when incorrect data entered -->
                        <div class="invalid-feedback">Please enter a valid price</div>
                    </div>

                    <div class="new-route-form-input">
                        <label for="country">Country:</label>
                        <input type="text" id="country" name="country" value="<%=idlisting.country%>" required
                            class="form-control">
                        <!-- to show text when incorrect data entered -->
                        <div class="invalid-feedback">Enter a valid country name</div>
                    </div>
                </div>

                <div class="new-route-form-input">
                    <label for="location">Location:</label>
                    <input type="text" id="location" name="location" value="<%=idlisting.location%>" required
                        class="form-control">
                    <!-- to show text when incorrect data entered -->
                    <div class="invalid-feedback">Enter a valid location</div>
                </div>

                <div class="new-route-form-input">
                    <button type="submit">Repost</button>
                </div>
            </form>
        </div>
    </body>